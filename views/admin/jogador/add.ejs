<%- include('../cabecalho.ejs') %>
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Melhorar Elenco</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <form action="" method="post">
    <h1><i class="fas fa-users"></i> Melhorar Elenco</h1>
    <label for="nome"><i class="fas fa-user icon"></i> Nome</label>
    <input type="text" id="nome" name="nome" placeholder="Digite o nome">
    
    <label for="camisa"><i class="fas fa-ruler-vertical icon"></i> Numero da camisa</label>
    <input type="text" id="camisa" name="camisa" placeholder="Digite o numero da camisa">
    
    <label for="time"><i class="fas fa-weight icon"></i> Time</label>
    <select id="time" name="time" class="custom-select">
      <option value="Time A">Time A</option>
      <option value="Time B">Time B</option>
      <option value="Time C">Time C</option>
    </select>
    
    <label for="posicao"><i class="fas fa-map-marker-alt icon"></i> Posição</label>
    <select id="posicao" name="posicao" class="custom-select">
      <option value="Atacante">Atacante</option>
      <option value="Meia">Meia</option>
      <option value="Defensor">Defensor</option>
    </select>
    
    <button type="submit"><i class="fas fa-plus icon"></i> Melhorar Elenco!</button>
  </form>
</body>
</html>
