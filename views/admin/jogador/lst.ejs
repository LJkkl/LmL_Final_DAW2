<%- include('../cabecalho.ejs') %>

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>jogadores</title>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
     <link rel="stylesheet" href="/css/style.css">
</head>

<body>
    <h1><i class="fas fa-futbol"></i> Jogadores</h1>
    <div class="container">
        <div class="add-button">
            <a href="/admin/jogador/add"><i class="fas fa-user-plus icon"></i> Aumentar Elenco</a>
        </div>
    
        
        <table>
            <tr>
                <th><i class="fas fa-user"></i> Nome</th>
                <th><i class="fas fa-ruler-vertical"></i> camisa</th>
                <th><i class="fas fa-weight"></i> Time</th>
                <th><i class="fas fa-map-marker-alt"></i> Posição</th>
                <th><i class="fas fa-tools"></i> Ações</th> 
            </tr>
            <%Jogados.forEach(function(jogador){%>
                <tr>
                
                  <td><%=jogador.nome%></td>
                  <td><%=jogador.camisa%></td>
                    <td><%=jogador.time%></td>
                    <td><%=jogador.posicao%></td>
                    <td>
                      <a href="/admin/jogador/edt/<%= jogador.id %>" class="btn edit"><i class="fas fa-edit icon"></i> Editar</a>
                      <a href="/admin/jogador/del/<%= jogador.id %>" class="btn delete"><i class="fas fa-trash-alt icon"></i> Excluir</a>
                    </td>
                </tr>
             <%})%>
          
            
        
           
        </table>
    </div>
</body>

</html>