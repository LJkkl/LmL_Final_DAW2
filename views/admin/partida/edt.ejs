<%- include('../cabecalho.ejs') %>

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Editar Jogador</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="/css/style.css">

</head>

<body>
    <h1><i class="fas fa-edit"></i> Edição das partidas</h1>
    <div class="container">
        <form action="" method="post">
            <label for="nome"><i class="fas fa-tshirt"></i> Nome</label>
            <input type="text" id="nome" name="nome" placeholder="Digite o nome">

            <label for="altura"><i class="fas fa-landmark"></i> Estádio</label>
            <input type="text" id="altura" name="altura" placeholder="Digite a altura">
            <label for="classificação"><i class="fas fa-landmark"></i> Classificação</label>
            <input type="text" id="classificação" name="classificação" placeholder="Digite a classificação">
            <label for="datafundação"><i class="fas fa-landmark"></i> Data da fundação</label>
            <input type="text" id="datafundação" name="datafundação" placeholder="Digite a data de fundação">

            <button type="submit"><i class="fas fa-save"></i> Efetuar Edição</button>
        </form>
    </div>
</body>

</html>